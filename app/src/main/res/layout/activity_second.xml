<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#F5F2F2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"


        app:titleTextColor="#000"
        android:layout_marginBottom="70dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_close_black_24dp"
            android:drawablePadding="20sp"
            android:id="@+id/close"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:textSize="20sp"
            android:textColor="#000"
            />
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.textfield.TextInputEditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Remind me about"
        android:padding="10dp"
        android:textColorHint="#48B885"
        android:layout_marginBottom="10dp"
        android:textColor="#48B885"
        android:textSize="20sp"
        android:id="@+id/remind"
        />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableStart="@drawable/ic_location_on_black_24dp"
    android:text="Select Location"
    android:drawableEnd="@drawable/ic_search_black_24dp"
    android:padding="10dp"
    android:id="@+id/location"
    android:textSize="20sp"
    android:drawablePadding="20sp"
    android:layout_marginBottom="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_access_alarm_black_24dp"
            android:text="Ring Alarm"
            android:padding="10dp"
            android:textSize="20sp"
            android:drawablePadding="20sp"
            android:layout_weight="3"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="true"
            android:padding="10dp"
            android:layout_weight="1"

             />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:padding="20sp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp">
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attachment"
                android:textSize="18dp"
                android:layout_alignParentRight="true"

                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20sp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            >
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="18dp"
                android:layout_alignParentRight="true"

                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="#48b885"
            android:textColor="#fff"

            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            />
    </LinearLayout>



</LinearLayout>